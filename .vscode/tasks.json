{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build",
      "type": "shell",
      "command": "make",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      },
      "problemMatcher": ["$gcc"],
      "linux": {
        "command": "make",
        "options": {
          "cwd": "${workspaceFolder}"
        }
      },
      "windows": {
        "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe\"",
        "args": [
          "campsur.sln",
          "/p:Configuration=Debug",
          "/p:Platform=x64",
          "/v:minimal"
        ],
        "options": {
          "cwd": "${workspaceFolder}",
          "shell": {
            "executable": "cmd.exe",
            "args": ["/d", "/c"]
          }
        }
      }
    },
    {
      "label": "Build (Make)",
      "type": "shell",
      "command": "make",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "Build (MSBuild)",
      "type": "shell",
      "command": "C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe",
      "args": [
        "campsur.sln",
        "/p:Configuration=Debug",
        "/p:Platform=x64",
        "/v:minimal"
      ],
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}",
        "shell": {
          "executable": "cmd.exe",
          "args": ["/d", "/c"]
        }
      },
      "windows": {
        "command": "\"C:\\Program Files\\Microsoft Visual Studio\\2022\\Community\\MSBuild\\Current\\Bin\\MSBuild.exe\""
      },
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "premake5 vs2022",
      "type": "shell",
      "command": "premake5",
      "args": ["vs2022"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "premake5 gmake2",
      "type": "shell",
      "command": "premake5",
      "args": ["gmake2"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
